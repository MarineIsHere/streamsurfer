{{define "report-stream-history"}}
{{template "page-header" .}}
<h1>{{.Title}}</h1>
<table class="table table-bordered table-condensed">
      <thead>
          <tr>
  {{range $i, $val := .Head}}
					<th>
					{{$val}}
					</th>
  {{end}}
					</tr>
		  </thead>
			<tbody>
	{{range $i, $row := .Body}}
		{{range $j, $col := $row}}
		  {{if $j}}<td>{{$col}}</td>{{/* окраска строк по уровню ошибок */}}
			{{else}}<tr class="{{$col}}">
			{{end}}
		{{end}}
				</tr>
	{{end}}
	    </tbody>
</table>
{{template "page-footer" .}}
{{end}}